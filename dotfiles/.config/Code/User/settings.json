{
    "[python]": {
        "editor.codeActionsOnSave": {
            "source.organizeImports": "explicit"
        },
        "editor.defaultFormatter": "ms-python.black-formatter",
        "editor.formatOnSave": true
    },
    "autoDocstring.customTemplatePath": "/home/user/.config/Code/sphinx.template",
    "autoDocstring.docstringFormat": "one-line-sphinx",
    "autoDocstring.generateDocstringOnEnter": true,
    "autoDocstring.guessTypes": true,
    "autoDocstring.includeExtendedSummary": true,
    "autoDocstring.startOnNewLine": true,
    "black-formatter.args": [
        "--line-length=98",
        "--extend-exclude=\\.json",
    ],
    "breadcrumbs.enabled": false,
    "cSpell.languageSettings": [
        // https://github.com/streetsidesoftware/vscode-spell-checker/issues/107
        {
            "languageId": "python,cpp,c",
            "includeRegExpList": [
                // For Python
                "comments",
                "strings",
                // For C++ and C
                "CStyleComment",
                "string"
            ]
        },
        {
            "languageId": "jsonc", // (.json with comments) because most "commands" here are strings
            "includeRegExpList": [
                "CStyleComment",
            ]
        }
    ],
    "diffEditor.diffAlgorithm": "advanced",
    "docker.environment": {
        "HOST": "unix:///run/user/1000/podman/podman.sock"
    },
    "editor.acceptSuggestionOnEnter": "smart",
    "editor.cursorBlinking": "solid",
    "editor.fontFamily": "'JetBrainsMonoNL Nerd Font', 'monospace', monospace, 'Droid Sans Fallback'",
    "editor.fontSize": 13,
    "editor.formatOnSave": true,
    "editor.lineNumbers": "relative",
    "editor.multiCursorModifier": "ctrlCmd",
    "editor.rulers": [
        98
    ],
    "editor.tabCompletion": "on",
    "editor.unfoldOnClickAfterEndOfLine": true,
    "editor.wordWrap": "on",
    "editor.wordWrapColumn": 98,
    "editor.wrappingIndent": "indent",
    "emmet.triggerExpansionOnTab": true,
    "extensions.experimental.affinity": {
        "asvetliakov.vscode-neovim": 1
    },
    "flake8.args": [
        "--max-line-length=98",
    ],
    "git.enableCommitSigning": true,
    "isort.args": [
        "--profile=black",
        "--line-length=98",
    ],
    "isort.check": true,
    "isort.importStrategy": "fromEnvironment",
    "julia.enableCrashReporter": false,
    "julia.enableTelemetry": false,
    "julia.symbolCacheDownload": true,
    "jupyter.askForKernelRestart": false,
    "jupyter.kernels.excludePythonEnvironments": [
        "/usr/bin/python3",
    ],
    "jupyter.interactiveWindow.creationMode": "perFile",
    "jupyter.interactiveWindow.textEditor.executeSelection": true,
    "mypy-type-checker.showNotifications": "always",
    "notebook.cellToolbarLocation": {
        "default": "right",
        "jupyter-notebook": "right"
    },
    "notebook.codeActionsOnSave": {
        "source.organizeImports": true
    },
    "notebook.formatOnSave.enabled": true,
    "notebook.globalToolbar": false,
    "notebook.lineNumbers": "on",
    "pylint.args": [
        "--max-line-length=98"
    ],
    "python.condaPath": "/home/user/micromamba/bin/micromamba",
    "python.defaultInterpreterPath": "/home/user/micromamba/envs/dev/bin/python",
    "telemetry.telemetryLevel": "off",
    "terminal.external.linuxExec": "kitty",
    "terminal.integrated.commandsToSkipShell": [
        "language-julia.interrupt"
    ],
    "terminal.integrated.defaultProfile.linux": "zsh",
    "terminal.integrated.inheritEnv": false,
    "terminal.integrated.profiles.linux": {
        "bash": {
            "icon": "terminal-bash",
            "path": "bash"
        },
        "fish": {
            "path": "fish"
        },
        "tmux": {
            "icon": "terminal-tmux",
            "path": "tmux"
        },
        "zsh": {
            "path": "zsh"
        }
    },
    "vim.cursorStylePerMode.insert": "line",
    "vim.cursorStylePerMode.normal": "block",
    "vim.cursorStylePerMode.replace": "underline",
    "vim.easymotion": true,
    "vim.neovimPath": "/usr/bin/nvim",
    "vim.neovimUseConfigFile": true,
    "vscode-neovim.ctrlKeysForInsertMode": [
        "h",
        "j",
        "o",
        "r",
        "t",
        "u",
        "w",
    ],
    "vscode-neovim.neovimExecutablePaths.linux": "/usr/bin/nvim",
    "window.commandCenter": false,
    "window.customTitleBarVisibility": "auto",
    "window.titleBarStyle": "custom",
    "workbench.activityBar.location": "top",
    "workbench.colorTheme": "One Dark Pro Darker",
    "workbench.sideBar.location": "right",
    "workbench.startupEditor": "none",
    "zenMode.hideLineNumbers": false,
}